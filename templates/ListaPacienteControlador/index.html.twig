{% extends 'base.html.twig' %}

{% block title %}Lista de Pacientes{% endblock %}

{% block stylesheets %}
<style>
    .volver-menu {
        position: absolute;
        top: 10px;
        right: 10px;
    }
</style>
{% endblock %}


{% block body %}
<h1>Lista de Pacientes</h1>

<ul>
    {% for paciente in pacientes %}
        <li>
            <a href="{{ path('app_ver_paciente', { 'index': loop.index0 }) }}">
                {{ paciente.nombre }} {{ paciente.apellidos }}
            </a>
        </li>
    {% else %}
        <li>No hay pacientes registrados.</li>
    {% endfor %}
</ul>

<a href="{{ path('app_aplicacion') }}" class="btn btn-primary volver-menu">Volver al Men√∫</a>
{% endblock %}